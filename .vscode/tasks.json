{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install: System Requirements",
      "type": "shell",
      "osx": {
        "command": "brew update && brew bundle install --file=config/system/requirements.macos.brew.rb"
      },
      "windows": {
        "command": "chocolatey install config/system/requirements.windows.choco.config"
      },
      "linux": {
        "command": "apt-get update && xargs -a config/system/requirements.linux.apt.txt apt-get install -y"
      }
    },
    {
      "label": "Conan: Dependencies: Create JUCE",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "command": "conan create modules/juce-conan"
    },
    {
      "label": "Conan: Dependencies: Create pluginval",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "command": "conan create modules/pluginval-conan",
    },
    {
      "label": "Conan: PeakEater: Build",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "command": "conan install . && conan build ."
    },
    {
      "label": "Conan: PeakEater: Export Package",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "command": "conan export-pkg ."
    },
    {
      "label": "Conan: PeakEater: Test",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "command": "conan test test peakeater/0.6.3@vvvar/testing"
    },
    {
      "label": "Test: Build Artefacts",
      "type": "shell",
      "command": "python3 test/artefacts.test.py"
    },
    {
      "label": "Test: Pluginval",
      "type": "shell",
      "command": "python3 test/pluginval.test.py"
    },
    {
      "label": "Test: Run Standalone",
      "type": "shell",
      "osx": {
        "command": "build/Release/peakeater_artefacts/Release/Standalone/peakeater.app/Contents/MacOS/peakeater"
      }
    }
  ]
}