{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install: System Requirements",
      "type": "shell",
      "osx": {
        "command": "brew update && brew bundle install --file=config/system/requirements.macos.brew.rb"
      },
      "windows": {
        "command": "chocolatey install config/system/requirements.windows.choco.config"
      },
      "linux": {
        "command": "apt-get update && xargs -a config/system/requirements.linux.apt.txt apt-get install -y"
      }
    },
    {
      "label": "Conan: Create JUCE",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "osx": {
        "command": "conan create juce-conan -pr:h=conan/profiles/macos-armv8 -pr:b=conan/profiles/macos-armv8"
      },
      "windows": {
        "command": "conan create juce-conan -pr:h=conan/profiles/windows-x86_64 -pr:b=conan/profiles/windows-x86_64"
      },
      "linux": {
        "command": "conan create juce-conan -pr:h=conan/profiles/linux-x86_64 -pr:b=conan/profiles/linux-x86_64"
      }
    },
    {
      "label": "Conan: Build PeakEater",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "osx": {
        "command": "conan install . -pr:h=conan/profiles/macos-armv8 -pr:b=conan/profiles/macos-armv8 && conan build . -pr:h=conan/profiles/macos-armv8 -pr:b=conan/profiles/macos-armv8"
      },
      "windows": {
        "command": "conan install . -pr:h=conan/profiles/windows-x86_64 -pr:b=conan/profiles/windows-x86_64 && conan build . -pr:h=conan/profiles/windows-x86_64 -pr:b=conan/profiles/windows-x86_64"
      },
      "linux": {
        "command": "conan install . -pr:h=conan/profiles/linux-x86_64 -pr:b=conan/profiles/linux-x86_64 && conan build . -pr:h=conan/profiles/linux-x86_64 -pr:b=conan/profiles/linux-x86_64"
      }
    },
    {
      "label": "Test: Run PeakEater Standalone",
      "type": "shell",
      "command": "${workspaceFolder}/build/PeakEater_artefacts/${input:build_type}/Standalone/PeakEater.app/Contents/MacOS/PeakEater"
    }
  ]
}