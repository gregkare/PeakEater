{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "conan_host_profile",
      "description": "Which conan profile use as a host profile?",
      "type": "pickString",
      "default": "default",
      "options": [
        "default",
        "conan/profiles/linux-x86_64",
        "conan/profiles/macos-armv8",
        "conan/profiles/windows-x86_64"
      ]
    }
  ],
  "tasks": [
    {
      "label": "Install: System Requirements",
      "type": "shell",
      "osx": {
        "command": "brew update && brew bundle install --file=${workspaceFolder}/config/system/requirements.macos.brew.rb"
      },
      "windows": {
        "command": "chocolatey install ${workspaceFolder}/config/system/requirements.windows.choco.config"
      },
      "linux": {
        "command": "apt-get update && xargs -a ${workspaceFolder}/config/system/requirements.linux.apt.txt apt-get install -y"
      }
    },
    {
      "label": "Conan: Create JUCE",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "command": "conan create juce-conan -pr:h=${input:conan_host_profile} -pr:b=${input:conan_host_profile}"
    },
    {
      "label": "Conan: Build PeakEater",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "command": "conan install . -pr:h=${input:conan_host_profile} -pr:b=${input:conan_host_profile} && conan build . -pr:h=${input:conan_host_profile} -pr:b=${input:conan_host_profile}"
    },
    {
      "label": "Test: Run PeakEater Standalone",
      "type": "shell",
      "command": "${workspaceFolder}/build/PeakEater_artefacts/${input:build_type}/Standalone/PeakEater.app/Contents/MacOS/PeakEater"
    }
  ]
}