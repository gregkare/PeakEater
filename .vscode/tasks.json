{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "build_type",
      "type": "pickString",
      "description": "Pick build type",
      "default": "Debug",
      "options": [
        "Release",
        "Debug"
      ]
    },
    {
      "id": "build_target",
      "type": "pickString",
      "description": "What we're targeting today?",
      "default": "PeakEater_All",
      "options": [
        "PeakEater_All",
        "PeakEater_Standalone",
        "PeakEater_VST3",
        "PeakEater_AU",
        "PeakEater_LV2",
        "PeakEater_CLAP"
      ]
    }
  ],
  "tasks": [
    {
      "label": "Conan: Build JUCE",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "command": "conan create juce-conan",
    },
    {
      "label": "Conan: Build",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "command": "conan install . && conan build . --options signed=True",
    },
    {
      "label": "Conan: Package",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "command": "conan export-pkg .",
    },
    {
      "label": "Run Standalone",
      "type": "shell",
      "command": "${workspaceFolder}/build/PeakEater_artefacts/${input:build_type}/Standalone/PeakEater.app/Contents/MacOS/PeakEater"
    }
  ]
}