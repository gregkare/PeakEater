{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "signed",
      "type": "pickString",
      "description": "Should executable be signed(macOS only)?",
      "default": "False",
      "options": [
        "True",
        "False"
      ]
    }
  ],
  "tasks": [
    {
      "label": "JUCE: Build",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "command": "conan create juce-conan",
    },
    {
      "label": "PeakEater: Build",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "command": "conan install . && conan build . --options signed=${input:signed}",
    },
    {
      "label": "PeakEater: Export Package",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "command": "conan export-pkg . --options signed=${input:signed}",
    },
    {
      "label": "PeakEater: Create",
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "command": "conan create . --options signed=${input:signed}",
    },
    {
      "label": "PeakEater: Run Standalone",
      "type": "shell",
      "command": "${workspaceFolder}/build/PeakEater_artefacts/${input:build_type}/Standalone/PeakEater.app/Contents/MacOS/PeakEater"
    }
  ]
}