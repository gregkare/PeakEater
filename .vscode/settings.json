{
    "editor.formatOnSave": true,
    "[cpp]": {
        "editor.defaultFormatter": "zachflower.uncrustify"
    },
    "uncrustify.configPath.osx": "${workspaceFolder}/config/uncrustify.cfg",
    "uncrustify.configPath.windows": "${workspaceFolder}/config/uncrustify.cfg",
    "uncrustify.configPath.linux": "${workspaceFolder}/config/uncrustify.cfg",
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "python.languageServer": "Pylance",
    "python.analysis.extraPaths": [
        "/usr/local/Cellar/conan/2.0.3/libexec/lib/python3.11/site-packages"
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "180"
    ],
    "taskExplorer.enabledTasks": {
        "ant": false,
        "bash": false,
        "batch": false,
        "composer": false,
        "gradle": false,
        "grunt": false,
        "gulp": false,
        "make": false,
        "maven": false,
        "npm": false,
        "perl": false,
        "pipenv": false,
        "powershell": false,
        "python": false,
        "ruby": false,
        "tsc": false
    },
    "taskExplorer.enableSideBar": true,
    "taskExplorer.groupMaxLevel": 5,
    "taskExplorer.groupWithSeparator": true,
    "taskExplorer.groupSeparator": ":",
    "grammarly.files.include": [
        "**/README.md",
        "**/readme.md"
    ],
    "cSpell.words": [
        "appdmg",
        "armv",
        "artefacts",
        "codesign",
        "juce",
        "libc",
        "libcxx",
        "libdir",
        "msvc",
        "notarytool",
        "peakeater",
        "ULFO",
        "vvvar",
        "xcrun"
    ]
}