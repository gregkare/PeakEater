{
    "editor.formatOnSave": true,
    "[cpp]": {
        "editor.defaultFormatter": "zachflower.uncrustify"
    },
    "uncrustify.configPath.osx": "${workspaceFolder}/config/uncrustify.cfg",
    "uncrustify.configPath.windows": "${workspaceFolder}/config/uncrustify.cfg",
    "uncrustify.configPath.linux": "${workspaceFolder}/config/uncrustify.cfg",
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "python.languageServer": "Pylance",
    "python.analysis.extraPaths": [
        "/usr/local/Cellar/conan/2.0.3/libexec/lib/python3.11/site-packages"
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "180"
    ],
    "taskExplorer.enabledTasks": {
        "ant": false,
        "bash": false,
        "batch": false,
        "composer": false,
        "gradle": false,
        "grunt": false,
        "gulp": false,
        "make": false,
        "maven": false,
        "npm": false,
        "perl": false,
        "pipenv": false,
        "powershell": false,
        "python": false,
        "ruby": false,
        "tsc": false
    },
    "taskExplorer.enableSideBar": true,
    "taskExplorer.groupMaxLevel": 5,
    "taskExplorer.groupWithSeparator": true,
    "taskExplorer.groupSeparator": ":",
    "grammarly.files.include": [
        "**/README.md",
        "**/readme.md"
    ],
    "cSpell.words": [
        "appdmg",
        "armv",
        "artefacts",
        "auval",
        "bindirs",
        "buildenv",
        "cmaketoolchain",
        "codesign",
        "cppstd",
        "hexlabs",
        "juce",
        "killall",
        "libc",
        "libcxx",
        "libdir",
        "libstdc",
        "mmacosx",
        "msvc",
        "notarytool",
        "peakeater",
        "pluginval",
        "resdirs",
        "ULFO",
        "vvvar",
        "xcrun",
        "zfile",
        "zipresp"
    ],
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.env.osx": {
        "CONAN_LOG_RUN_TO_FILE": "1",
        "CONAN_DEFAULT_PROFILE": "${workspaceFolder}/config/conan/profiles/macos-armv8"
    },
    "terminal.integrated.env.windows": {
        "CONAN_LOG_RUN_TO_FILE": "1",
        "CONAN_DEFAULT_PROFILE": "${workspaceFolder}/config/conan/profiles/windows-x86_64"
    },
    "terminal.integrated.env.linux": {
        "CONAN_LOG_RUN_TO_FILE": "1",
        "CONAN_DEFAULT_PROFILE": "${workspaceFolder}/config/conan/profiles/linux-x86_64"
    },
}